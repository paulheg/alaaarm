{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Alaaarm",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "args": [
                "run",
                "--config=config.json",
                "--loglevel=debug"
            ],
            "program": "${workspaceFolder}/cmd/alaaarm/"
        },
        {
            "name": "Create Config",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "envFile": "${workspaceFolder}/cmd/alaaarm/test.env",
            "args": [
                "config",
                "create",
                "--config=config.json",
                "--loglevel=debug"
            ],
            "program": "${workspaceFolder}/cmd/alaaarm/"
        }
    ]
}